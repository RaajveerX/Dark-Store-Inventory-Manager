<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Add New Product"
        id="addProductDialog"
    >
        <f:SimpleForm editable="true">
            <f:content>
                <Label text="Name" />
                <Input id="nameInput" />
                <Label text="Category" />
                <Input id="categoryInput" />
                <Label text="Price" />
                <Input
                    id="priceInput"
                    type="Number"
                />
                <Label text="Stock" />
                <Input
                    id="stockInput"
                    type="Number"
                />
            </f:content>
        </f:SimpleForm>
        <beginButton>
            <Button
                text="Add"
                press=".onSaveNewProduct"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelAddProduct"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
